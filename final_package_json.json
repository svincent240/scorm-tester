{
  "name": "scorm-testing-tool",
  "version": "2.1.0",
  "description": "A comprehensive Windows app for testing and previewing SCORM courses with full LMS simulation, monitoring, and production-ready features",
  "main": "main.js",
  "homepage": "https://github.com/yourcompany/scorm-testing-tool",
  "author": {
    "name": "Your Company",
    "email": "support@yourcompany.com"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron . --expose-gc",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "lint": "eslint src/ tests/ --ext .js,.ts",
    "lint:fix": "eslint src/ tests/ --ext .js,.ts --fix",
    "security-audit": "npm audit && electron-builder install-app-deps",
    "build": "npm run test && npm run lint && electron-builder",
    "build:win": "electron-builder --win",
    "build:portable": "electron-builder --win portable",
    "dist": "npm run build",
    "release": "npm run test && npm run security-audit && electron-builder --publish=always",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rimraf dist/ node_modules/.cache/ temp/",
    "analyze": "npm run build && npx bundle-analyzer dist/",
    "docs": "jsdoc -c jsdoc.conf.json",
    "coverage": "nyc --reporter=html --reporter=text jest",
    "benchmark": "node tests/performance/benchmark.js",
    "validate-config": "node scripts/validate-config.js"
  },
  "keywords": [
    "scorm",
    "elearning",
    "lms",
    "testing",
    "preview",
    "education",
    "litmos",
    "moodle",
    "electron",
    "desktop",
    "windows"
  ],
  "build": {
    "appId": "com.yourcompany.scorm-testing-tool",
    "productName": "SCORM Testing & Preview Tool",
    "copyright": "Copyright Â© 2025 Your Company",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/electron/**/*",
      "!tests/**/*",
      "!docs/**/*",
      "!coverage/**/*",
      "!*.md",
      "!.git*",
      "!.vscode/**/*",
      "!.eslintrc*",
      "!jest.config.js"
    ],
    "extraResources": [
      {
        "from": "config/production.js",
        "to": "config/"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "publisherName": "Your Company Name",
      "signingHashAlgorithms": ["sha256"],
      "signAndEditExecutable": true,
      "signDlls": true,
      "verifyUpdateCodeSignature": true
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SCORM Testing Tool",
      "uninstallDisplayName": "SCORM Testing & Preview Tool",
      "license": "LICENSE.txt",
      "installerIcon": "build/installer.ico",
      "uninstallerIcon": "build/uninstaller.ico",
      "installerHeaderIcon": "build/header.ico"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "yourcompany",
      "repo": "scorm-testing-tool",
      "private": true
    },
    "compression": "maximum",
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "chai": "^4.3.10",
    "sinon": "^17.0.1",
    "@playwright/test": "^1.40.0",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-import": "^2.29.0",
    "rimraf": "^5.0.5",
    "nyc": "^15.1.0",
    "jsdoc": "^4.0.2",
    "spectron": "^19.0.0",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "dependencies": {
    "node-stream-zip": "^1.15.0"
  },
  "optionalDependencies": {
    "better-sqlite3": "^9.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/tests/**/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "eslintConfig": {
    "extends": ["standard"],
    "env": {
      "node": true,
      "jest": true,
      "browser": true
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "nyc": {
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "exclude": [
      "tests/**/*",
      "coverage/**/*",
      "node_modules/**/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourcompany/scorm-testing-tool.git"
  },
  "bugs": {
    "url": "https://github.com/yourcompany/scorm-testing-tool/issues"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/yourcompany"
  }
}